{
  "name": "smarty-switch",
  "displayName": "smarty-switch",
  "description": "A plugin to switch between smarty templates and php files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:smarty-switch.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smarty-switch.findTplFile",
        "title": "Toggle beteween php and tpl files"
      }
    ],
    "configuration": 
    {
      "title": "Smarty Switch",
      "properties": {
        "smarty-switch.tplFileExtension": {
          "type": "string",
          "default": ".tpl",
          "description": "The extension of the smarty template files"
        },
        "smarty-switch.templateFolder": {
          "type": "string",
          "default": "./templates",
          "description": "The name of the folder where the smarty templates are stored"
        },
        "smarty-switch.phpFileExtension": {
          "type": "string",
          "default": ".php",
          "description": "The extension of the php files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}
